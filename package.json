{
  "name": "banking-system-microservices",
  "version": "1.0.0",
  "description": "Banking Transaction Microservices - TechWin Team",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:transactions\" \"npm run dev:category\" \"npm run dev:accounts\"",
    "dev:gateway": "cd gateway && npm run dev",
    "dev:transactions": "cd services/transactions-service && npm run dev",
    "dev:category": "cd services/category-service && npm run dev",
    "dev:accounts": "cd . && npm run dev:watch",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "start": "concurrently \"npm run start:gateway\" \"npm run start:transactions\" \"npm run start:category\"",
    "start:gateway": "cd gateway && npm start",
    "start:transactions": "cd services/transactions-service && npm start",
    "start:category": "cd services/category-service && npm start",
    "build": "tsc",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "banking",
    "transactions",
    "microservices"
  ],
  "author": "TechWin Team",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.8",
    "pdfkit": "^0.17.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.17.3",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
