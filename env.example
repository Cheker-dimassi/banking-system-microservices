# Shared defaults
GLOBAL_JWT_SECRET=replace_me
KAFKA_BROKER=localhost:9092
RABBITMQ_URL=amqp://guest:guest@localhost:5672
POSTGRES_USER=bank
POSTGRES_PASSWORD=bank_password
POSTGRES_HOST=localhost

# Service-specific ports
GATEWAY_PORT=3000
TRANSACTIONS_SERVICE_PORT=3001
CATEGORIES_SERVICE_PORT=3002
AUTH_SERVICE_PORT=3003
ACCOUNTS_SERVICE_PORT=3004
PAYMENTS_SERVICE_PORT=3005
NOTIFICATIONS_SERVICE_PORT=3006
AUDIT_SERVICE_PORT=3007

# Service URLs (for Gateway routing and inter-service communication)
TRANSACTIONS_SERVICE_URL=http://localhost:3001
CATEGORIES_SERVICE_URL=http://localhost:3002
ACCOUNTS_SERVICE_URL=http://localhost:3004

# Database
MONGODB_URI=mongodb://localhost:27017/transaction-service

# Feature flags
ENABLE_SAGA=true
ENABLE_EVENT_SOURCING=false

# Currency Exchange API (Optional)
# ExchangeRate-API: Free, no key required (1500 requests/month)
# Fixer.io: Requires API key from https://fixer.io
FIXER_API_KEY=your_fixer_api_key_here
# Central Bank of Tunisia API (if available)
CBT_API_URL=https://api.cbt.tn/api/exchange-rates
CBT_API_KEY=your_cbt_api_key_here

