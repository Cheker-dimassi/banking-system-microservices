                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "transactions",
                                "auto-rules",
                                "ACC_123"
                            ]
                        },
                        "description": "Retrieves all automation rules for account ACC_123."
                    },
                    "response": []
