        },
        {
            "name": "6. Test Automation Flow",
            "item": [
                {
                    "name": "Step 1: Create Auto-Save Rule",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Rule created successfully\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.success).to.be.true;",
                                    "    pm.expect(jsonData.rule).to.have.property('ruleId');",
                                    "    pm.environment.set(\"ruleId\", jsonData.rule.ruleId);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"accountId\": \"ACC_123\",\n  \"name\": \"Test Auto-Save 10%\",\n  \"type\": \"save_percentage\",\n  \"trigger\": \"on_deposit\",\n  \"action\": {\n    \"targetAccount\": \"ACC_456\",\n    \"percentage\": 10\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/transactions/auto-rules",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "transactions",
                                "auto-rules"
                            ]
                        },
                        "description": "Step 1: Create rule."
                    },
                    "response": []
                },
                {
                    "name": "Step 2: Make Deposit (Trigger Rule)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Deposit successful\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "setTimeout(function(){}, 2000);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"toAccount\": \"ACC_123\",\n  \"amount\": 1000,\n  \"description\": \"Test trigger\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/transactions/deposit",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "transactions",
                                "deposit"
                            ]
                        },
                        "description": "Step 2: Trigger rule."
                    },
                    "response": []
                },
                {
                    "name": "Step 3: Check Statistics",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Statistics retrieved\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.statistics.totalExecutions).to.be.above(0);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/transactions/auto-rules/{{ruleId}}/statistics",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "transactions",
                                "auto-rules",
                                "{{ruleId}}",
                                "statistics"
                            ]
                        },
                        "description": "Step 3: Verify execution."
                    },
                    "response": []
                },
                {
                    "name": "Step 4: Delete Test Rule",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/transactions/auto-rules/{{ruleId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "transactions",
                                "auto-rules",
                                "{{ruleId}}"
                            ]
                        },
                        "description": "Step 4: Cleanup."
                    },
                    "response": []
                }
            ],
            "description": "Automated test flow."
        }
